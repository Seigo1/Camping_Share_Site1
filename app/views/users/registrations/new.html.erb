<div class="cover container-lg-fluid text-center" style="height: 800px; padding: 200px 0 200px 0;">

  <div class="p-3 m-auto" style="background-color: rgba(152,251,152,0.4); width: 500px; border-radius: 5px;">
    <h2>新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
      <div class="text-right mr-5">
        <div class="field my-3">
          <%= f.label :ニックネーム %>
          <%= f.text_field :name, autofocus: true, required: true %>
        </div>

        <div class="field my-3">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field mb-3">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field mb-3">
          <%= f.label :パスワード（再確認） %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "新規登録" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>