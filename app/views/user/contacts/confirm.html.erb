<div class="container">
  <table class="table table-bordered m-3">
    <tbody>
      <tr>
        <td class="text-center" style="width: 30%;">お名前</td>
        <td><%= @contact.name %></td>
      </tr>
      <tr>
        <td class="text-center" style="width: 30%;">メールアドレス</td>
        <td><%= @contact.email %></td>
      </tr>
      <tr>
        <td class="text-center" style="width: 30%;">電話番号</td>
        <td><%= @contact.phone_number %></td>
      </tr>
      <tr>
        <td class="text-center" style="width: 30%;">用件</td>
        <td><%= @contact.subject %></td>
      </tr>
      <tr>
        <td class="text-center">メッセージ</td>
        <td style="white-space: pre-wrap;"><%= @contact.message %></td>
      </tr>
    </tbody>
  </table>

  <%= form_for(@contact) do |f| %>
    <%= f.hidden_field :name %>
    <%= f.hidden_field :email %>
    <%= f.hidden_field :phone_number %>
    <%= f.hidden_field :subject %>
    <%= f.hidden_field :message %>
    <div class="mb-3"><%= f.submit '送信', class: 'btn btn-secondary' %></div>
  <% end %>
  <%= form_for @contact, url: back_path do |f| %>
    <%= f.hidden_field :name %>
    <%= f.hidden_field :email %>
    <%= f.hidden_field :phone_number %>
    <%= f.hidden_field :subject %>
    <%= f.hidden_field :message %>
    <div class="mb-3"><%= f.submit '入力画面に戻る', class: 'btn btn-secondary' %></div>
  <% end %>
</div>