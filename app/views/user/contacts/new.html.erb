<div class="container-lg my-3">
  <%= form_for(@contact, url: confirm_path) do |f| %>
    <div class="form-group">
      <%= f.label :name, 'お名前*' %>
      <%= f.text_field :name, autofocus: true, class: 'form-control', style: 'width: 200px;' %>
    </div>

    <div class="form-group">
      <%= f.label :email, 'メールアドレス*' %>
      <%= f.text_field :email, autofocus: true, class: 'form-control', style: 'width: 400px;' %>
    </div>

    <div class="form-group">
      <%= f.label :phone_number, '電話番号*' %>
      <%= f.text_field :phone_number, autofocus: true, class: 'form-control', style: 'width: 400px;' %>
    </div>

    <div class="form-group">
      <%= f.label :subject, '用件*' %>
      <%= f.text_field :subject, autofocus: true, class: 'form-control', style: 'width: 400px;' %>
    </div>

    <div class="form-group">
      <%= f.label :message, 'メッセージ*' %>
      <%= f.text_area :message, size: '10x10', class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= f.submit '入力内容確認', class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>