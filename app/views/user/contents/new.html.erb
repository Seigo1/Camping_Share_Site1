<div class="container-lg my-3">
  <div class="row">
    <div class="col-6 mx-auto">
      <%= form_with model: @content, :url => {:action => :create}, local: true do |f| %>
        <div class="form-group">
          <%= f.label :"ジャンル" %><br />
          <%= f.collection_select(:genre_id, Genre.all, :id, :name, prompt: "選択してください") %><br />
        </div>
        <div class="form-group">
          <%= f.label :"キャンプ場名" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :"住所" %>
          <%= f.text_field :address, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :"紹介文" %>
          <%= f.text_field :introduction, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :"評価" %><br />
          <%= f.select :review, Content.reviews.keys, {prompt: "選択してください"} %>
        </div>
        <div class="form-group">
          <%= f.submit "投稿する" , class: 'btn btn-secondary'%>
        </div>
        <%= f.hidden_field :user_id, :value => current_user.id %>
        <%= f.hidden_field :latitude %>
        <%= f.hidden_field :longitude %>
      <% end %>
    </div>
  </div>
</div>