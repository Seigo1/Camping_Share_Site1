<div class="container-lg">
  <h2 class="mt-3">投稿一覧</h2>
  <div class="row align-items-center">
    <table class="col-lg table table-bordered mx-auto">
      <thead>
        <tr>
          <th style="width: 100px;">日時</th>
          <th style="width: 100px;">名前</th>
          <th style="width: 100px;">キャンプ場名</th>
          <th style="width: 150px;">住所</th>
        </tr>
      </thead>
      <tbody>
        <% if @search_contents %>
            <% @search_contents.first(20).each do |content| %>
              <tr>
                <td><%= content.created_at.strftime("%Y/%m/%d %H:%M:%S") %></td>
                <td>
                  <%= content.user.name %>
                </td>
                <td>
                  <%= link_to admin_content_path(content.id) do %>
                    <%= content.name %>
                  <% end %>
                </td>
                <td><%= content.address %></td>
              </tr>
            <% end %>
          <% else %>
            <% @contents.first(20).each do |content| %>
              <tr>
                <td><%= content.created_at.strftime("%Y/%m/%d %H:%M:%S") %></td>
                <td>
                  <%= content.user.name %>
                </td>
                <td>
                  <%= link_to admin_content_path(content.id) do %>
                    <%= content.name %>
                  <% end %>
                </td>
                <td><%= content.address %></td>
              </tr>
            <% end %>
          <% end %>
      </tbody>
    </table>
  </div>
</div>