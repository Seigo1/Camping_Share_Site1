<div class="container-lg">
  <h2 class="mt-3">ジャンル編集</h2>
  <div class="row">
    <div class="col-lg mx-auto">
      <%= form_with model: @genre,:url => {:action => :update}, local:true do |f| %>
        <div class="form-group">
          <label for="genre_name" class="mr-2">ジャンル名</label>
          <div style="display: inline-block; margin-right: 10px;">
            <%= f.text_field :name, autofocus: true, class: "form-control" %>
          </div>
          <span class="mr-3">
            <%= f.submit '変更を保存', class: "btn btn-success" %>
            <span>
          <span>
            <%= link_to "ジャンルを削除", admin_genre_path, method: :delete, class: "btn btn-danger" %>
          </span>
        </div>
      <% end %>
    </div>
  </div>
</div>