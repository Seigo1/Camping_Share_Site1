<div class="container-lg-fluid">
  <h3 class="pt-3 text-center">マイページ</h3>
  <div class="row mx-auto" style="width: 80%;">
    <table class="col-lg table table-bordered mx-auto my-3">
      <thead>
      </thead>
      <tbody>
        <tr>
          <td rowspan="4" class="lg text-center" style="width: 350px;">
            <%= attachment_image_tag @user, :image, :fill, 300, 300, size:'300x300', format: 'jpeg', fallback: "no_image.jpeg" %>
          </td>
          <td>ニックネーム</td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <td>紹介文</td>
          <td><%= @user.introduction %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td><%= @user.is_active %></td>
        </tr>
        <tr>
          <td colspan="3" class="text-center">
            <%= link_to "編集する", edit_admin_user_path(@user.id), class: "btn btn-success", type:"button" %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <h3 class="mt-3 text-center">投稿リスト</h3>
  <div class="row text-center mx-auto" style="width: 80%;">
    <table class="col-lg table table-bordered mx-auto my-3">
      <thead>
        <th>キャンプ場名</th>
        <th>住所</th>
        <th>紹介文</th>
        <th>評価</th>
      </thead>
      <tbody>
        <% @contents.each do |content| %>
        <tr>
          <td>
            <%= link_to admin_content_path(content.id) do %>
              <%= content.name %>
            <% end %>
            </td>
          <td><%= content.address %></td>
          <td><%= content.introduction %></td>
          <td><%= content.review %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>